@model Assignment2.Models.User
@{
    Layout = "_Layout";
}
<h3>Edit Profile</h3>
<hr />
<form asp-controller="Home" asp-action="EditUser" method="post">
    <input type="hidden" value="@Model.UserId" name="UserId" />
    <div class="form-group">
        <label>First Name:</label>
        <input asp-for="FirstName" maxlength="50" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <input asp-for="LastName" maxlength="50" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Email Address:</label>
        <input asp-for="EmailAddress" maxlength="50" required class="form-control">
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="Password" asp-for="Password" maxlength="50" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Role:</label>
        <select class="form-control" asp-for="RoleId" required>
            <option value="1">Admin</option>
            <option value="2">General User</option>
        </select>
    </div>
    <div class="form-group">
        <label>Date of Birth:</label>
        <input asp-for="DateOfBirth" required class="form-control">
    </div>
    <div class="form-group">
        <label>City:</label>
        <input asp-for="City" maxlength="50" required class="form-control">
    </div>
    <div class="form-group">
        <label>Address:</label>
        <input asp-for="Address" maxlength="50" required class="form-control">
    </div>
    <div class="form-group">
        <label>Postal Code:</label>
        <input asp-for="PostalCode" maxlength="50" required class="form-control">
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input asp-for="Country" maxlength="50" required class="form-control">
    </div>

    <input type="submit" class="btn btn-light btn-outline-dark" value="Submit Changes" />
</form>